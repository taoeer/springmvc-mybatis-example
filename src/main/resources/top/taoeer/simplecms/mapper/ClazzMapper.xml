<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.taoeer.simplecms.mapper.ClazzMapper">

    <resultMap id="clazzResultMap" type="clazz">
        <id property="id" column="id"/>
        <result property="code" column="code" />
        <collection fetchType="lazy" property="students" javaType="ArrayList" column="id" ofType="student" select="selectStudents" />
    </resultMap>

    <select id="selectStudents" resultType="student">
        select * from student where clazz_id=#{id}
    </select>

    <select id="select" resultMap="clazzResultMap">
        select *
        from clazz
    </select>
</mapper>