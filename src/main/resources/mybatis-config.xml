<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="db.properties" />
    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>
    
<!--    <typeAliases>-->
<!--        <typeAlias type="top.taoeer.simplecms.domain.User" alias="user" />-->
<!--    </typeAliases>-->
    
    <typeAliases>
<!--        可以为bean设置名字注解 @Alias("user")-->
        <package name="top.taoeer.simplecms.domain"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
<!--        <mapper resource="top/taoeer/simplecms/mapper/UserMapper.xml"/>-->
<!--        <mapper resource="top/taoeer/simplecms/mapper/StudentMapper.xml"/>-->
<!--        <mapper resource="top/taoeer/simplecms/mapper/ClazzMapper.xml"/>-->
        <package name="top.taoeer.simplecms.mapper"/>
    </mappers>
</configuration>